<nav notShow="{{true}}" title="" hasHeaderHeight></nav>

<view class="daily__container {{isIphoneX ? 'has-safe-padding' : ''}}">
  <view id="js-get-width"></view>
  <canvas class="daily__canvas" canvas-id="js-canvas" style="height: {{canvasHeight}}px;"></canvas>
</view>

<nav isDaily isFromWeapp="{{isFromWeapp}}" title="{{navigateTitle}}"></nav>

<cover-view class="u-fix-bottom save-btn--container {{isIphoneX ? 'has-safe-padding' : ''}}" hidden="{{showLoading}}">
  <cover-view class="save-btn--border"></cover-view>
  <button class="save-btn" bindtap="saveImage">保存图片</button>
</cover-view>

<cover-view class="action-sheet" hidden="{{actionSheetHidden}}" bindchange="closeActionSheet">
  <cover-view class="action-sheet__container">
    <button class="action-sheet__btn" open-type="openSetting" bindtap="closeActionSheet">授权设置</button>
    <cover-view class="action-sheet__cancel" bindtap="closeActionSheet">取消</cover-view>
  </cover-view>
</cover-view>

