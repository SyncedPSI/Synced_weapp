<nav title="稍后阅读" isNoSearch hasHeaderHeight></nav>
<myheader activeBar="pending"></myheader>

<view class="pending--container">
  <view class="pending--item" wx:for="{{articles}}" wx:key="{{id}}" data-index="{{index}}" bindtouchstart="touchStart" bindtouchmove="touchMove" bindtouchend="touchEnd">
      <view class="pending--inline  {{item.isOpenBtn ? 'is-open' : ''}}" style="{{item.txtStyle}}"  wx:for="{{articleList}}" wx:key="{{item.id}}">
        <article id="{{item.id}}" articleId="{{item.id}}" title="{{item.title}}" category="{{item.category}}" publishedAt="{{item.published_at}}" query="{{item.schedule === '100%' ? '' : '&read_later=true'}}"></article>
      </view>
      <view class="pending--btn" bindtap="deleteArticle" data-index="{{index}}">
        <image class="pending--icon" src="/icons/delete.png" mode="cover" />
        <text>删除</text>
      </view>
  </view>
</view>

