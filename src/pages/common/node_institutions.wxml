<template name="node-institutions">
  <view class="node-block">
    <view class="node-block__header">
      <text class="node-block__title">相关机构</text>
    </view>
    <view class="node-institution">
      <block wx:for="{{institutions}}" wx:for-item="item" wx:key="unique">
        <navigator class="node-institution__title" url="../institution/institution?id={{item.id}}">• {{item.zh_name ? item.zh_name : item.en_name}}</navigator>
      </block>
    </view>
  </view>
</template>
