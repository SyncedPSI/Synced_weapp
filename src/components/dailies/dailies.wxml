<view class="daily-item__container {{ isAndroid ? 't-andriod' : ''}}">
  <block wx:for="{{keys}}" wx:key="{{keys}}" wx:for-item="key">
    <view class="daily-item {{index === 0 ? 't-red' : ''}}">
      <view class="daily-item__date">
        <view class="daily-item__tip">
          <view class="daily-item__tip--inner"></view>
        </view>

        <text>{{dailies[key].day}}</text>
        <text class="daily-item__year">{{dailies[key].date}}</text>
      </view>
      <!-- 日报 -->
      <navigator class="daily-item__inline t-topic" wx-if="{{dayDaily[key] !== undefined && index !== 0}}" url="../topic/topic?id={{dayDaily[key].id}}">
        <view class="daily-topic__header">
          <view class="daily-topic__hr"></view>
          <text>每日精选</text>
        </view>
        <view class="daily-item__title">{{dayDaily[key].title}}</view>
      </navigator>

      <navigator url="../daily/show/show?id={{item.id}}" class="daily-item__inline" wx:for="{{dailies[key].list}}" wx:key="{{item.id}}">
        <view class="daily-item__title">{{item.title}}</view>
        <view class="daily-item__content">{{item.content}}</view>
        <view class="u-flex">
          <text class="daily-item__create">{{item.created_at}}</text>
          <view class="daily-item__action" catchtap="openActionSheet" data-id="{{item.id}}" data-title="{{item.title}}">
            <image class="daily-item__img" src="/icons/daily_action.png" mode="aspectFill" />
          </view>
        </view>
      </navigator>
    </view>
  </block>
</view>
